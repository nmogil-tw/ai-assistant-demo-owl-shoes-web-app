# description: The Account SID for your Twilio account
# format: sid (e.g ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: true
TWILIO_ACCOUNT_SID=

# description: The Account Auth Token for your Twilio account
# format: sid
# required: true
TWILIO_AUTH_TOKEN=

# description: The Twilio Chat Service SID for your chat application
# format: sid (e.g. ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
TWILIO_CHAT_SERVICE_SID= 

# description: The Twilio API Key for generating chat tokens
# format: sid (e.g. SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
TWILIO_API_KEY= 

# description: The Twilio API Secret for generating chat tokens
# format: string
# required: false
TWILIO_API_SECRET= 

# description: The Assistant SID for your Twilio AI assistant
# format: sid (e.g. aia_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: true
ASSISTANT_ID=

# description: The API key for your Airtable base
# format: id
# required: true
AIRTABLE_API_KEY=

# description: The app or base ID for your Airtable base
# format: id
# required: true
AIRTABLE_BASE_ID=apppyWAwzLsfgk0Xr

# description: The domains where your Twilio Functions are hosted
# format: sid (e.g. your-domain-1234-dev.twil.io)
# required: true
FUNCTIONS_DOMAIN=

# description: The TaskRouter Workspace SID for handing over conversations to a human
# format: sid (e.g. WSxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
FLEX_WORKSPACE_SID= 

# description: The TaskRouter Workflow SID for handing over conversations to a human
# format: sid (e.g. WWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
FLEX_WORKFLOW_SID=


# description: The Flex Instance SID for the Flex instance
# format: sid (e.g. GOxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
FLEX_INSTANCE_SID=

# description: The Voice Intellegence Service SID for transcribing calls
# format: sid (e.g. GDxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
VOICE_INTEL_SERVICE_SID= 

# description: The SID for the Studio Flow
# format: sid (e.g. FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
STUDIO_FLOW_SID=

# description: The SID for the Flex Voice Studio Flow
# format: sid (e.g. FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
TWILIO_FLEX_VOICE_STUDIO_FLOW=

# description: The SID for the Sync Service
# format: sid (e.g. ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
# required: false
TWILIO_SYNC_SERVICE_SID=

# description: The Write Key for your Segment account
# format: key
# required: false
SEGMENT_WRITE_KEY=

# description: The phone number for the AI Assistant
# format: string
# required: true
AI_ASSISTANT_PHONE_NUMBER=

# description: The email for the demo identity
# format: string (e.g. email@example.com)
# required: true
DEMO_IDENTITY_EMAIL=

# description: The phone number for the Twilio SMS from
# format: string
# required: false
TWILIO_SMS_FROM_NUMBER=

# description: The full ngrok URL for HMR when using ngrok tunneling
# format: URL (e.g. https://your-tunnel.ngrok-free.app)
# required: false
NGROK_URL=

# Frontend variables (with VITE_ prefix)
VITE_AIRTABLE_API_KEY=${AIRTABLE_API_KEY}
VITE_AIRTABLE_BASE_ID=${AIRTABLE_BASE_ID}
VITE_TWILIO_ASSISTANT_SID=${ASSISTANT_ID}
VITE_TWILIO_FUNCTION_URL=${FUNCTIONS_DOMAIN}
VITE_AI_ASSISTANT_PHONE_NUMBER=${AI_ASSISTANT_PHONE_NUMBER}

