{
  "industry": {
    "id": "talk-talk",
    "name": "Talk Talk",
    "type": "telecommunications"
  },
  "company": {
    "name": "Talk Talk",
    "email": "support@talktalk.com",
    "phone": "+44 800 123 4567",
    "address": {
      "street": "1 Telecom Tower",
      "city": "London",
      "state": "England",
      "zip": "W1T 3JD"
    }
  },
  "assistant": {
    "name": "TalkBot",
    "voice": "en-GB-Neural2-A",
    "promptTemplate": "prompts/assistant.hbs"
  },
  "products": {
    "entityName": "plan",
    "entityNamePlural": "plans",
    "tableName": "plans",
    "categories": ["broadband", "mobile", "tv"],
    "schema": {
      "coreFields": ["id", "name", "price", "description", "image_url", "category", "brand"],
      "industryFields": [
        {"name": "speed", "type": "string", "displayName": "Speed"},
        {"name": "data_allowance", "type": "string", "displayName": "Data Allowance"},
        {"name": "contract_months", "type": "number", "displayName": "Contract Length"}
      ],
      "displayFields": ["name", "category", "price", "speed", "data_allowance", "contract_months"]
    }
  },
  "tools": {
    "enabled": ["customerLookup", "orderLookup", "products", "placeOrder", "createSurvey"],
    "customTools": [
      {
        "id": "checkCoverage",
        "name": "Check Coverage",
        "description": "Check broadband and mobile coverage availability at a specific postcode",
        "method": "GET",
        "endpoint": "/tools/check-coverage",
        "schema": {
          "postcode": "string"
        }
      }
    ]
  },
  "segment": {
    "events": [
      {
        "name": "Product Viewed",
        "trigger": "product_viewed",
        "properties": ["product_id", "name", "price", "category", "brand"]
      },
      {
        "name": "Product Added",
        "trigger": "product_added",
        "properties": ["cart_id", "product_id", "name", "price", "quantity"]
      },
      {
        "name": "Product Removed",
        "trigger": "product_removed",
        "properties": ["cart_id", "product_id", "name", "price"]
      },
      {
        "name": "Cart Viewed",
        "trigger": "cart_viewed",
        "properties": ["cart_id", "products", "total"]
      },
      {
        "name": "Checkout Started",
        "trigger": "checkout_started",
        "properties": ["cart_id", "products", "total"]
      },
      {
        "name": "Service Activated",
        "trigger": "order_completed",
        "properties": ["order_id", "cart_id", "total", "products"]
      },
      {
        "name": "Service Cancelled",
        "trigger": "service_cancelled",
        "properties": ["plan_id", "cancellation_reason"]
      }
    ]
  },
  "theme": {
    "colors": {
      "primary": "#00A3E0",
      "secondary": "#005A9C",
      "accent": "#FFB81C"
    },
    "logo": "assets/talk-talk-logo.png"
  }
}
